function int greaterThan0(int numb, int cond) {
	if (numb > cond) {
		return 1;
	}
	else{
		return 0;
	}
}

function int checkPrice(double totalPrice, double loanValue) {
	if (totalPrice >= 2*loanValue) {
		return 1;
	}
	else{
		return 0;
	}
	
}

